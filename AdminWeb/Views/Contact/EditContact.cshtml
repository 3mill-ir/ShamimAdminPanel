@model AdminWeb.Models.DataModels.ContactManagementModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section CSS_Requested{
    <link href="~/Content/assets/global/plugins/dropzone/dropzone.min.css" rel="stylesheet">
    <link href="~/Content/assets/global/plugins/input-text/style.min.css" rel="stylesheet">
    <link href="~/Content/assets/global/plugins/step-form-wizard/css/step-form-wizard.min.css" rel="stylesheet">
    <link href="~/Content/assets/global/plugins/summernote/summernote.min.css" rel="stylesheet">
    <link href="~/Content/assets/global/css/PipoStyle.css" rel="stylesheet" />
}

@section js_Requested
{
    <script src="~/Content/assets/global/plugins/switchery/switchery.min.js"></script> <!-- IOS Switch -->
    <script src="~/Content/assets/global/plugins/bootstrap-tags-input/bootstrap-tagsinput.min.js"></script> <!-- Select Inputs -->
    <script src="~/Content/assets/global/js/pages/form_icheck.js"></script>  <!-- Change Icheck Color - DEMO PURPOSE - OPTIONAL -->
    <script src="~/Content/assets/global/plugins/dropzone/dropzone.min.js"></script>  <!-- Upload Image & File in dropzone -->
    <script src="~/Content/assets/global/plugins/summernote/summernote.min.js"></script> <!-- Simple HTML Editor -->
    <script src="~/Content/assets/global/plugins/typed/typed.min.js"></script> <!-- Animated Typing -->
    <script src="~/Content/assets/global/js/pages/editor.js"></script>
    <script src="~/Content/assets/global/plugins/step-form-wizard/plugins/parsley/parsley.min.js"></script> <!-- OPTIONAL, IF YOU NEED VALIDATION -->
    <script src="~/Content/assets/global/plugins/step-form-wizard/js/step-form-wizard.js"></script> <!-- Step Form Validation -->
    <script src="~/Content/assets/global/plugins/noty/jquery.noty.packaged.min.js"></script>  <!-- Notifications -->
    <script src="~/Content/assets/global/js/pages/notifications.js"></script>
    <script>
        jQuery(document).ready(function () {
            generate('top', '.page-content', '', '@ViewBag.Notification', 'topbar');
        });
    </script>
}
<div class="row">
    <div class="col-lg-8 col-lg-push-2">
        <div class="panel">
            <div class="panel-content">
                <div class="nav-tabs3">
                    @using (Html.BeginForm("EditContact", "Contact", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row margin-top-30">
                            <div class="col-lg-8 col-md-12 col-lg-push-2">
                                <div class="row">
                                    <div class="col-md-12">
                                        @Html.Label(Resource.Resource.View_Address)
                                        @Html.TextAreaFor(model => model.AddressInput, new { placeholder = "آدرس های مورد نظر را وارد نمایید ...", id = "form-field-22", @class = "form-control form-white", style = "margin: 0px 0px 0px -11px; height: 54px; width: 100%;" })
                                    </div>
                                    <div class="col-md-12">
                                        @Html.Label(Resource.Resource.View_Phone)
                                        @Html.TextAreaFor(model => model.PhoneInput, new { placeholder = "شماره تلفن های مورد نظر را وارد نمایید ...", id = "form-field-22", @class = "form-control form-white", style = "margin: 0px 0px 0px -11px; height: 54px; width: 100%;" })
                                    </div>
                                    <div class="col-md-12">
                                        @Html.Label(Resource.Resource.View_Fax)
                                        @Html.TextAreaFor(model => model.FaxInput, new { placeholder = "شماره فکس های مورد نظر را وارد نمایید ...", id = "form-field-22", @class = "form-control form-white", style = "margin: 0px 0px 0px -11px; height: 54px; width: 100%;" })
                                    </div>
                                    <div class="col-md-12">
                                        @Html.Label(Resource.Resource.View_Email)
                                        @Html.TextAreaFor(model => model.EmailInput, new { type = "email", placeholder = "لطفا ایمیل های مورد نظر را وارد کنید ...", id = "form-field-22", @class = "form-control form-white", style = "margin: 0px 0px 0px -11px; height: 54px; width: 100%;" })
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.Label(Resource.Resource.View_TelegramChatID)
                                            <div class="input-group">
                                                <span class="input-group-addon">آی دی کانال</span>
                                                @Html.TextBoxFor(model => model.TelegramChannelID, new { type = "text", placeholder = "آی دی کانال تلگرام مورد نظر را وارد کنید ...", @class = "form-control form-white" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.Label(Resource.Resource.View_Telegram)
                                            <div class="input-group">
                                                <span class="input-group-addon">Telegram</span>
                                                @Html.TextBoxFor(model => model.Telegram, new { type = "text", placeholder = "لینک تلگرام مورد نظر را وارد کنید ...", @class = "form-control form-white" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.Label(Resource.Resource.View_Facebook)
                                            <div class="input-group">
                                                <span class="input-group-addon">Facebook</span>
                                                @Html.TextBoxFor(model => model.Facebook, new { type = "text", placeholder = "لینک فیس بوک مورد نظر را وارد کنید ...", @class = "form-control form-white" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.Label(Resource.Resource.View_Twitter)
                                            <div class="input-group">
                                                <span class="input-group-addon">Twitter</span>
                                                @Html.TextBoxFor(model => model.Twitter, new { type = "text", placeholder = "لینک تویتر مورد نظر را وارد کنید ...", @class = "form-control form-white" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.Label(Resource.Resource.View_Instagram)
                                            <div class="input-group">
                                                <span class="input-group-addon">Instagram</span>
                                                @Html.TextBoxFor(model => model.Instagram, new { type = "text", placeholder = "لینک اینستاگرام مورد نظر را وارد کنید ...", @class = "form-control form-white" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-success ladda-button" data-style="expand-right" style="width:100%;margin-top: 20px;">
                                    <span class="ladda-label">@Resource.Resource.Edit</span>
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>